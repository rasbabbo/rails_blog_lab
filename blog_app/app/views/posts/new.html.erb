<form action="/posts" method="post">
	<input type="text" name="post[title]" placeholder="title">
	<input type="text" name="post[description]" placeholder="description">
	<input type="text" name="tag[name]" placeholder="tag">
	<textarea name="post[author]" placeholder="author"></textarea>
	<%= token_tag form_authenticity_token %>

	<button> Save Da' Post!</button>
</form>

