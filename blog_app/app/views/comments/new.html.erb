
<div>

	<h2><%= @post.title %> <h2>
	<p><%= @post.description %><p>

</div>

	<%= form_for [@post, @comment] do |f| %>
		<%= f.text_field :name,  class: "form-control", placeholder: "name"%><br>
		<%= f.text_area :description, placeholder: "description" %><br>
		<%= f.submit "Save Content", class: "btn btn-primary"%>

	<% end %>

